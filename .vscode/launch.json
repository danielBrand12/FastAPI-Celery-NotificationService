{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: debug",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 10004
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceRoot}",
                    "remoteRoot": "."
                }
            ]
        },
        {
            "name": "send-email",
            "type": "debugpy",
            "request": "launch",
            "module": "celery",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "-A",
                "app.workers.send_email",
                //"app.celery_conf",
                "worker",
                "-Q",
                "send-email",
                "--loglevel=info",
                "-c",
                "1",
                "--without-heartbeat",
                "--without-gossip",
                "--without-mingle",
            ],
        }
    ]
}